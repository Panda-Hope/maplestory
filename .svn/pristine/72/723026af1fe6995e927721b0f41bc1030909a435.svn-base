@charset "utf-8";
/* CSS Document */
/* CSS Document */
*                                        {margin:0;padding:0;}

/*背景图*/
body                                     {padding-top:10px;background-color:#F4FCFE;}
#bgcolor                                 {background:url(../IMAGES/bg4.jpg) -300px 0px no-repeat;background-size:1920px 650px;position:absolute;left:0px;top:0px;z-index:-999;}


/*标题图片*/
#head_tag                                {position:relative;margin-top:20px;}
#mxd_logo                                {position:absolute;left:490px;top:-30px;}
#head_pic                                {display:block;width:1200px;height:70px;background:url(../IMAGES/nav.png) 0px -90px;}

/*右侧固定图标*/
.fix_logo                                {width:40px;height:80px;border-radius:5px;position:fixed;z-index:200;right:0px;top:300px;background:url(../IMAGES/fix_logo.png) no-repeat;}
.fix_logo_2                              {width:40px;height:80px;border-radius:5px;position:fixed;z-index:200;right:0px;top:300px;background:url(../IMAGES/fix_logo_2.png) no-repeat -20px -0px;} 
#login_logo                              {width:180px;height:330px;background:url(../IMAGES/rect_bg_2.png) no-repeat;background-size:180px 330px;position:fixed;z-index:600;right:-200px;top:200px;border-radius:10px;}
.right_pic                               {display:block;border:2px solid #FFF;width:102px;height:102px;margin:40px auto;border-radius:55px;font-size:30px;text-decoration:none;text-align:center;line-height:100px;color:#C0C;}
.right_pic:hover                         {border:2px solid #0FF;}
#user_photo                              {width:100px;height:100px;border-radius:55px;} 

/*搜索框*/
#search_div                              {width:100px;height:70px;border:2px solid #C1E9FA;margin-top:30px;background:transparent;background-color:rgba(255,255,255,0.75);border-radius:20px;overflow:hidden;position:relative;}
#fangdajing                              {display:inline-block;margin-top:15px;margin-left:30px;}
#search_form                             {position:absolute;left:130px;top:18px;}
#search_form input                       {border:1px solid #0FC;height:35px;border-radius:8px;font-size:20px;color:#0FC;}
#search_button                           {position:absolute;left:380px;top:18px;}
#search_button button                    {border:1px solid #0FC;width:60px;height:35px;border-radius:10px;background:#FFF;font-size:20px;color:#999;}
#search_button button:hover               {background:#ECF9FD;}

/*商品部分*/
.commodity                               {width:1200px;border:1px solid #0FF;clear:both;overflow:hidden;margin-top:20px;background:transparent;background-color:rgba(255,255,255,0.75);}
#com_title                               {width:1200px;height:40px;border:1px solid #0FF;color:#FE2687;line-height:40px;font-size:20px;padding-left:20px;}
.com_pic                                 {width:238px;height:190px;border:1px solid #0FF;float:left;position:relative;}
.color_show                              {width:230px;height:182px;border:4px solid #FFE5F4;display:none;position:absolute;left:0;top:0;z-index:-100;}
.com_gif                                 {width:66px;height:66px;display:block;margin:10px auto;border:1px solid #999;}
.com_span1 a                             {display:block;margin-left:85px;text-decoration:none;}
.com_span1 a:hover                       {text-decoration:underline;}
.com_span2                               {display:block;}
.com_span2 img                           {margin-left:80px;margin-right:5px;}
.com_span2 span                          {color:#F00;}
.com_span3                               {margin-left:40px;}
.button_buy                              {display:inline-block;margin-left:10px;background:url(../IMAGES/button_2.png) no-repeat 0px -3px;width:60px;height:30px;font-size:12px;text-align:center;line-height:30px;position:relative;top:-8px;text-decoration:none;}


